<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fitness_equipment.test.com.fitness_equipment.activity.MonmentListActivity">

    <include layout="@layout/header_bar_small"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CDCDCD"
        ></View>



    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/history_linear_bg"
        >


        <Button
            android:id="@+id/btnDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/day"
            android:background="@null"
            android:textColor="#18C49A"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#18C49A"
            ></View>
        <Button
            android:id="@+id/btnWeek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/week"
            android:background="@null"
            android:textColor="#18C49A"
            />



        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#18C49A"
            ></View>
        <Button
            android:id="@+id/btnMont"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/month"
            android:textColor="#18C49A"
            android:background="@null"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#18C49A"
            ></View>
        <Button
            android:id="@+id/btnYear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/year"
            android:background="@null"
            android:textColor="#18C49A"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imageViewLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/left"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="90dp"
            />


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2017-05-21"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#18C49A"
            />

        <ImageView
            android:id="@+id/imageViewRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingRight="90dp"
            android:src="@mipmap/praise_into" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>





</LinearLayout>
