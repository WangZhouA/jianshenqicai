<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#373843"
    android:orientation="vertical"
    tools:context="fitness_equipment.test.com.fitness_equipment.activity.SideReportActivity">

    <include layout="@layout/header_bar_small"></include>

     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="20dp"
         >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <fitness_equipment.test.com.fitness_equipment.view.CircleImageView
            android:id="@+id/pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/male_head2"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_weight="1"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/age"
                    android:textColor="#FFF"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textColor="#FFF"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/side_age"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="22"
                    android:textColor="#FFF"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/Toage"
                    android:textColor="#FFF"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="25dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/Toheight"
                    android:textColor="#FFF"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textColor="#FFF"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/side_height"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="165"
                    android:textColor="#FFF"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="cm"
                    android:textColor="#FFF"
                    android:gravity="center"
                    />
            </LinearLayout>



        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/Towight"
                    android:textColor="#FFF"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textColor="#FFF"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/side_wight"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="70"
                    android:textColor="#FFF"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="kg"
                    android:textColor="#FFF"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/size"
                    android:textColor="#FFF"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textColor="#FFF"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/side_size"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/fatness"
                    android:textColor="#FFF"
                    android:gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/base"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Side_score"
            android:layout_centerInParent="true"
            android:paddingTop="50dp"
            android:textColor="#FFF"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_side_subdivision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100"
            android:layout_centerInParent="true"
            android:textSize="40dp"
            android:textColor="#FFF"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subdivision"
            android:layout_centerInParent="true"
            android:textColor="#FFF"
            android:gravity="center"
            android:textStyle="bold"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"

            >
            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/health_fat"
                android:text="24%"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:layout_gravity="center"

                />


            <TextView
                android:id="@+id/tv_tizhi"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ToBodyfat"
                android:gravity="center"
                android:textColor="#FFF"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/health_ametabolic"
                android:gravity="center"
                android:text="1190"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Basal_metabolism"
                android:gravity="center"
                android:textColor="#FFF"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/health_bmi"
                android:text="17.5"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/tv_bmi"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bmi"
                android:gravity="center"
                android:textColor="#FFF"
                />


        </LinearLayout>



    </LinearLayout>


    <Button
        android:id="@+id/btn_fenxiang"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="@string/sharing"
        android:background="@drawable/start_movment_btn"
        android:layout_marginTop="20dp"
        android:textColor="#FFF"
        />


    </LinearLayout>

     </ScrollView>
</LinearLayout>
