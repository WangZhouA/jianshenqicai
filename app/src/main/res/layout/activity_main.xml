<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >



        <include layout="@layout/header_bar_small"></include>


        <!--第二部分 viewpager-->

        <FrameLayout
            android:id="@+id/fragment"
             android:layout_below="@+id/header_all"
            android:layout_width="match_parent"
            android:layout_above="@+id/view"
            android:layout_height="wrap_content">
        </FrameLayout>



    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#24242424"
        android:layout_above="@+id/linearlayout_btn"
        ></View>


    <!--第三部分底部栏-->


    <LinearLayout
        android:id="@+id/linearlayout_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >


        <LinearLayout
            android:id="@+id/linearlayout_first"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/img_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/personal_s"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/tv_first"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_names"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:textColor="#929292"
                />

        </LinearLayout>




        <LinearLayout
            android:id="@+id/linearlayout_look"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/img_look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/circle_s"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/tv_circle"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/circle"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:textColor="#929292"
                />



        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearlayout_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/img_Keeping_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/personal_s"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                />



            <TextView
                android:id="@+id/tv_user"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:textColor="#929292"
                />


        </LinearLayout>



    </LinearLayout>


</RelativeLayout>
