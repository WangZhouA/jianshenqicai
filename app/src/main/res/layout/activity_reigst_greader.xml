<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fitness_equipment.test.com.fitness_equipment.activity.HealthRecordsActivity">
    <!--<include layout="@layout/header_bar_small"></include>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView

            android:id="@+id/girl_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/female_head"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/girl"
            android:layout_below="@+id/girl_gender"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="#19C49B"
            android:textSize="20dp"
            />




    </RelativeLayout>






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        >

        <ImageView
            android:id="@+id/boboy_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/male_head"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boboby"
            android:layout_below="@+id/boboy_gender"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="#19C49B"
            android:textSize="20dp"

            />


    </RelativeLayout>

</LinearLayout>
