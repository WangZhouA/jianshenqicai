<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fitness_equipment.test.com.fitness_equipment.activity.figureTestActivity">

    <include layout="@layout/header_bar_small"></include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/figure"
        android:textSize="20dp"
        android:textColor="#242424"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        >


        <ImageView
            android:id="@+id/peopele_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/m_six"
            android:layout_gravity="center"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            >


          <RelativeLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              >
            <ImageView
                android:id="@+id/img_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@mipmap/triangle"
                android:visibility="invisible"

                />
          </RelativeLayout>
          <RelativeLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              >
            <ImageView
                android:id="@+id/img_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@mipmap/triangle"
                android:visibility="invisible"
                />
          </RelativeLayout>
          <RelativeLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              >
            <ImageView
                android:id="@+id/img_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@mipmap/triangle"
                android:visibility="invisible"
                />
          </RelativeLayout>
          <RelativeLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              >
            <ImageView
                android:id="@+id/img_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@mipmap/triangle"

                />
          </RelativeLayout>
          <RelativeLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              >
            <ImageView
                android:id="@+id/img_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@mipmap/triangle"
                android:visibility="invisible"
                />
          </RelativeLayout>
          <RelativeLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              >
            <ImageView
                android:id="@+id/img_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@mipmap/triangle"
                android:visibility="invisible"
                />
          </RelativeLayout>
          <RelativeLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              >
            <ImageView
                android:id="@+id/img_seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@mipmap/triangle"
                android:visibility="invisible"
                />
          </RelativeLayout>
          <RelativeLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              >
            <ImageView
                android:id="@+id/img_eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@mipmap/triangle"
                android:visibility="invisible"
                />
          </RelativeLayout>



        </LinearLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#D8D8D8"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                ></View>



           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="6dp"
               android:layout_marginRight="6dp"
               android:orientation="horizontal"
               >

               <ImageView
                   android:id="@+id/onClickOne"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/circle_white"
                   android:layout_weight="1"

                   />
               <ImageView
                   android:id="@+id/onClickTwo"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/circle_white"
                   android:layout_weight="1"

                   />
               <ImageView
                   android:id="@+id/onClickThree"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/circle_white"
                   android:layout_weight="1"

                   />
               <ImageView
                   android:id="@+id/onClickFour"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/circle_green"
                   android:layout_weight="1"

                   />
               <ImageView
                   android:id="@+id/onClickFive"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/circle_white"
                   android:layout_weight="1"

                   />
               <ImageView
                   android:id="@+id/onClickSix"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/circle_white"
                   android:layout_weight="1"

                   />
               <ImageView
                   android:id="@+id/onClickSeven"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/circle_white"
                   android:layout_weight="1"

                   />
               <ImageView
                   android:id="@+id/onClickEight"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/circle_white"
                   android:layout_weight="1"

                   />


           </LinearLayout>



        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/robust"
                android:layout_weight="1"
                android:textColor="#19C49B"
                android:gravity="center"
                android:textSize="18dp"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/tv_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/strong"
                android:layout_weight="1"
                android:textColor="#19C49B"
                android:gravity="center"
                android:textSize="18dp"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/tv_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/compact"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#19C49B"
                android:textSize="18dp"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/tv_four"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="@string/symmetry"
                android:layout_weight="1"
                android:textColor="#19C49B"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/tv_five"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/With_meat"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#19C49B"
                android:textSize="18dp"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/tv_six"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/microbe"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#19C49B"
                android:textSize="18dp"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/tv_seven"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/overweight"
                android:layout_weight="1"
                android:textColor="#19C49B"
                android:textSize="18dp"
                android:gravity="center"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/tv_eight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/Severe_obesity"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#19C49B"
                android:textSize="18dp"
                android:visibility="invisible"
                />


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                >

                <Button
                    android:id="@+id/last_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/Last_step"
                    android:background="@drawable/btn_monment_bg"
                    />

                <Button
                    android:id="@+id/next_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/next_step"
                    android:background="@drawable/btn_monment_bg"
                    />


            </LinearLayout>

        </RelativeLayout>



    </LinearLayout>


</LinearLayout>
