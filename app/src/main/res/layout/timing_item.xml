<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >


        <TextView
            android:id="@+id/tv_timing_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="18:00"
            android:gravity="center"
            android:textSize="50dp" />

        <ImageView
            android:id="@+id/off_open"
            android:layout_width="50dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_switch_off"
            />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CDCDCD"
        ></View>


    <RelativeLayout
        android:id="@+id/rl_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="重复"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_alarm_clock_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_repeat"
            android:gravity="center_vertical"
            android:padding="13dp"
            android:text="周一 周二 周三"
            android:textColor="#CDC9C9"
            android:textSize="11sp" />

        <ImageButton
            android:id="@+id/ib_period_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:padding="14dp"
            android:src="@mipmap/ic_into" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CDCDCD"
        android:layout_marginLeft="10dp"
        ></View>

    <RelativeLayout
        android:id="@+id/rl_birth2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="标签"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_timing_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_lable"
            android:padding="15dp"
            android:text="换尿布时间"
            android:textColor="#CDC9C9"
            android:textSize="11sp" />
        
        <ImageButton
            android:id="@+id/ib_period_setb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:padding="14dp"
            android:src="@mipmap/ic_into" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CDCDCD"
        android:layout_marginLeft="10dp"
        ></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#F8F8FA"
        ></View>

    <RelativeLayout
        android:id="@+id/rl_birth3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/tv_voice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/delete"
            android:gravity="center"
            android:textColor="#FE3824"
            android:textSize="18sp" />



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#F8F8FA"
        ></View>

</LinearLayout>