<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fitness_equipment.test.com.fitness_equipment.activity.BigMyMedalActiviyu">


    <include layout="@layout/header_bar_small"></include>

    <TextView
        android:id="@+id/bigtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/get_medal_big"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:text="挑战10公里"
        android:gravity="center"
        android:textSize="25dp"
        android:drawablePadding="20dp"
        />


    <TextView
        android:id="@+id/smalltv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2017年5月08号获得"
        android:gravity="center"
        android:layout_marginTop="20dp"
        />

</LinearLayout>
